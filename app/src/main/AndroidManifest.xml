<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.getcarebase.carebase">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_blue_house_on_white"
        android:label="Carebase"
        android:roundIcon="@mipmap/ic_launcher_blue_house_on_white_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
         <service
                android:name="org.getcarebase.carebase.MyFirebaseMessagingService"
                android:enabled="true"
                android:exported="true">
         <intent-filter>
            <action android:name="com.google.firebase.MESSAGING_EVENT" />
         </intent-filter>
         </service>
         <meta-data
                android:name="com.google.firebase.messaging.default_notification_color"
                android:resource="@color/colorAccent" />
         <meta-data
                android:name="com.google.firebase.messaging.default_notification_channel_id"
                android:value="Carebase" />
        <activity android:name="org.getcarebase.carebase.MainActivity"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name="org.getcarebase.carebase.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.getcarebase.carebase.SignUpActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.getcarebase.carebase.LoginActivity" />
        </activity>
        <activity android:name="org.getcarebase.carebase.ResetActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.getcarebase.carebase.LoginActivity" />
        </activity>
        <activity android:name="org.getcarebase.carebase.NetworkActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.getcarebase.carebase.MainActivity" />
        </activity>
        <activity android:name="org.getcarebase.carebase.FilterActivity" />
    </application>

</manifest>