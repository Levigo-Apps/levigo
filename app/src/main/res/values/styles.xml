<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="Widget.Carebase.ToolBar.Gradient" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@drawable/gradient_bg_primary</item>
    </style>

    <style name="Widget.Carebase.ToolBar.GradientNoShadow" parent="@style/Widget.Carebase.ToolBar.Gradient">
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.Carebase.FloatingActionButton.Primary" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@android:color/white</item>
    </style>

    <style name="Widget.Carebase.MiniFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="tint">@color/colorGrey</item>
    </style>

    <style name="Widget.Carebase.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Codebase.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxStrokeColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.Codebase.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff0033</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>


