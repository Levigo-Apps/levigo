<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/inventoryitemlayout">


        <TextView
            android:id="@+id/item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="4dp"
            android:text="Name of Equipment"
            android:textStyle="bold"
            android:textColor="@color/colorinventoryText"
            android:textSize="20sp"
            android:ellipsize="end"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/item_quantity"
            app:layout_constraintTop_toBottomOf="@id/item_type" />

        <TextView
            android:id="@+id/item_di"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginStart="4dp"
            android:text="DI: 0123456789"
            android:textColor="@color/colorinventoryText"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_name"/>

        <TextView
            android:id="@+id/item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="999 UNITS"
            android:textStyle="bold"
            android:textColor="@color/colorinventoryText"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_type"/>

</androidx.constraintlayout.widget.ConstraintLayout>